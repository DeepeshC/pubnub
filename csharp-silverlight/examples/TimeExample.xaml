<navigation:Page x:Class="silverlight.TimeExample" 
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           mc:Ignorable="d"
           xmlns:navigation="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Navigation"
           d:DesignWidth="640" d:DesignHeight="480"
           Title="TimeExample Page">
    <Grid x:Name="LayoutRoot">
        <StackPanel>
            <TextBlock Text=" * Example to display time * " Margin="10,10,10,10" HorizontalAlignment="Center" FontWeight="Bold" FontSize="12"></TextBlock>
            <Button x:Name="Time" Content="Time" Click="Time_Click" Margin="10,10,10,10" HorizontalAlignment="Center" Width="100" Height="30"></Button>
            <TextBlock x:Name="lblTime" Margin="10,10,10,10"></TextBlock>
        </StackPanel>
    </Grid>
</navigation:Page>
