<navigation:Page x:Class="silverlight.PublishExample" 
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           mc:Ignorable="d"
           xmlns:navigation="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Navigation"
           d:DesignWidth="640" d:DesignHeight="480"
           Title="PublishSubscribeExample Page">
    <Grid x:Name="LayoutRoot">
        <StackPanel>
            <TextBlock Text=" * Example to publish messages * " Margin="10,10,10,10" HorizontalAlignment="Center" FontWeight="Bold" FontSize="12"></TextBlock>
            <Button x:Name="Publish" Content="Publish" Click="Publish_Click" HorizontalAlignment="Center" Height="30" Width="100" Margin="10,10,10,10"></Button>
            <TextBlock x:Name="publishedData" Text="Published messages - > " Visibility="Collapsed" Margin="10,10,10,10" ></TextBlock>
            <TextBlock x:Name="lblPublish" HorizontalAlignment="Left" Margin="10,10,10,10"></TextBlock>
        </StackPanel>
    </Grid>
</navigation:Page>
